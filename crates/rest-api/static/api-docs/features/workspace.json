	"components": {
		"schemas": {
			"Workspace": {
				"type": "object",
				"required": ["name"],
				"properties": {
					"name": { "$ref": "#/components/schemas/WorkspaceName" },
					"icon": { "$ref": "members.json#/components/schemas/NullableAvatar" },
					"accent_color": { "$ref": "#/components/schemas/WorkspaceAccentColor" }
				}
			},
			"WorkspaceName": {
				"type": "string",
				"summary": "The name of a Prose workspace.",
				"example": "Crisp"
			},
			"WorkspaceAccentColor": {
				"type": "string",
				"example": "#4233BE",
				"nullable": true
			},
			"InitWorkspaceRequest": {
				"type": "object",
				"required": ["name"],
				"properties": {
					"name": { "$ref": "#/components/schemas/WorkspaceName" }
				}
			},
			"GetWorkspaceNameResponse": {
				"type": "object",
				"required": ["name"],
				"properties": {
					"name": { "$ref": "#/components/schemas/WorkspaceName" }
				}
			},
			"SetWorkspaceNameRequest": {
				"type": "object",
				"required": ["name"],
				"properties": {
					"name": { "$ref": "#/components/schemas/WorkspaceName" }
				}
			},
			"GetWorkspaceIconResponse": {
				"type": "object",
				"properties": {
					"icon": { "$ref": "members.json#/components/schemas/NullableAvatar" }
				}
			},
			"SetWorkspaceIconRequest": {
				"type": "object",
				"required": ["image"],
				"properties": {
					"image": { "$ref": "members.json#/components/schemas/Avatar" }
				}
			},
			"GetWorkspaceAccentColorResponse": {
				"type": "object",
				"properties": {
					"color": { "$ref": "#/components/schemas/WorkspaceAccentColor" }
				}
			},
			"SetWorkspaceAccentColorRequest": {
				"type": "object",
				"required": ["color"],
				"properties": {
					"color": { "$ref": "#/components/schemas/WorkspaceAccentColor" }
				}
			}
		},
		"responses": {
			"WorkspaceNotInitialized": {
				"description": "Workspace not initialized",
				"content": {
					"application/json": {
						"schema": { "$ref": "../shared.json#/components/schemas/Error" },
						"example": {
							"error": "workspace_not_initialized"
						}
					}
				}
			},
			"WorkspaceAlreadyInitialized": {
				"description": "Workspace already initialized",
				"content": {
					"application/json": {
						"schema": { "$ref": "../shared.json#/components/schemas/Error" },
						"example": {
							"error": "workspace_already_initialized"
						}
					}
				}
			}
		}
	}
}
