{
	"paths": {
		"set_member_role": {
			"tags": ["Members"],
			"summary": "Set member role",
			"description": "Change a member's role.",
			"operationId": "set_member_role",
			"security": [{ "BearerAuth": [] }],
			"parameters": [{ "$ref": "members.json#/components/parameters/MemberId" }],
			"requestBody": {
				"required": true,
				"content": {
					"application/json": {
						"schema": { "$ref": "#/components/schemas/SetMemberRoleRequest" }
					}
				}
			},
			"responses": {
				"204": { "$ref": "../shared.json#/components/responses/NoContent" },
				"401": { "$ref": "../shared.json#/components/responses/Unauthorized" },
				"403": { "$ref": "../shared.json#/components/responses/Forbidden" }
			}
		}
	},
	"components": {
		"schemas": {
			"SetMemberRoleRequest": {
				"type": "object",
				"required": ["role"],
				"properties": {
					"role": { "$ref": "#/components/schemas/MemberRole" }
				}
			},
			"MemberRole": {
				"summary": "A member's role.",
				"type": "string",
				"enum": ["MEMBER", "ADMIN"]
			}
		}
	}
}
